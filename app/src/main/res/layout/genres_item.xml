<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/genre_bg"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="5dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivItemSourceImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        app:shapeAppearance="@style/corner_radius_start"/>

    <TextView
        android:id="@+id/tvItemTextDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/playfairdisplay_black"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivItemSourceImage"
        app:layout_constraintEnd_toEndOf="parent"
        android:maxLines="1"
        tools:text="Hello" />

</androidx.constraintlayout.widget.ConstraintLayout>